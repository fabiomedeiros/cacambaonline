@model Microsoft.AspNetCore.Identity.IdentityRole

@{
    ViewData["Title"] = "Editar Perfil";
}
<h2>@ViewData["Title"]</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditarConfirm" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label">Id</label>
                <input asp-for="Id" class="form-control" readonly />
                <label asp-for="Name" class="control-label">Nome</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
           <div class="form-group">
                            <input type="submit" value="Alterar" class="btn btn-primary" /> | <a asp-action="Index" class="btn btn-secondary">Voltar</a>
                        </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}  